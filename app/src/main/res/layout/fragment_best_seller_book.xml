<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ranking"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="serif"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="1" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="WHILE JUSTICE SLEEPS" />

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ranking"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/book_author"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16sp"
        tools:text="Stacey Abrams" />

    <TextView
        android:id="@+id/book_description"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_author"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-light"
        android:maxLines="5"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp"
        tools:text="When Justice Wynn slips into a coma, his law clerk, Avery Keene, must unravel the clues of a controversial case." />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#567b95"
        android:text="BUY ON AMAZON"
        android:textColor="@android:color/white" />

</RelativeLayout>

